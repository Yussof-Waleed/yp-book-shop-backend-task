# Example Environment Configuration
# Copy this file to .env.docker and adjust values as needed

# PostgreSQL Database Configuration
POSTGRES_DB=books_shop
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_INITDB_ARGS=--encoding=UTF8

# Application Database Configuration
DATABASE_URL=postgres://postgres:postgres@postgres:5432/books_shop

# Redis Configuration
REDIS_URL=redis://redis:6379

# JWT Configuration - MUST CHANGE IN PRODUCTION!
JWT_SECRET=your-super-secure-jwt-secret-key-minimum-32-characters-long

# Environment
NODE_ENV=development

# Server Configuration
PORT=3000

# External Access URLs (for host machine access)
EXTERNAL_DATABASE_URL=postgres://postgres:postgres@localhost:5434/books_shop
EXTERNAL_REDIS_URL=redis://localhost:6380
