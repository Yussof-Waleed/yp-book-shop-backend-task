{
  "name": "yp-book-shop-backend-task",
  "type": "module",
  "scripts": {
    "prepare": "husky",
    "dev": "docker-compose exec api tsx watch src/index.ts",
    "dev:local": "tsx watch src/index.ts",
    "build": "docker-compose exec api tsc -p tsconfig.json",
    "build:local": "tsc -p tsconfig.json",
    "start": "docker-compose exec api node dist/index.js",
    "start:local": "node dist/index.js",
    "lint": "docker-compose exec api eslint \"src/**/*.{ts,tsx}\"",
    "lint:local": "eslint \"src/**/*.{ts,tsx}\"",
    "lint:fix": "docker-compose exec api eslint \"src/**/*.{ts,tsx}\" --fix",
    "lint:fix:local": "eslint \"src/**/*.{ts,tsx}\" --fix",
    "format": "docker-compose exec api prettier --write .",
    "format:local": "prettier --write .",
    "format:check": "docker-compose exec api prettier --check .",
    "format:check:local": "prettier --check .",
    "test": "docker-compose exec api vitest",
    "test:local": "dotenv -e .env.local -- vitest",
    "test:run": "docker-compose exec api vitest --run",
    "test:run:local": "dotenv -e .env.local -- vitest --run",
    "test:coverage": "docker-compose exec api vitest --coverage",
    "test:coverage:local": "dotenv -e .env.local -- vitest --coverage",
    "pre-commit": "lint-staged && npm run test:run",
    "db:generate": "docker-compose exec api drizzle-kit generate:pg",
    "db:generate:local": "drizzle-kit generate:pg",
    "db:migrate": "docker-compose exec api drizzle-kit up:pg",
    "db:migrate:local": "drizzle-kit up:pg",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f api",
    "docker:shell": "docker-compose exec api sh",
    "docker:start": "sh scripts/docker-start.sh"
  },
  "dependencies": {
    "@hono/node-server": "^1.19.0",
    "@hono/zod-validator": "^0.7.2",
    "bcrypt": "^6.0.0",
    "dotenv": "^17.2.1",
    "drizzle-kit": "^0.18.1",
    "drizzle-orm": "^0.44.5",
    "hono": "^4.9.5",
    "pg": "^8.16.3",
    "redis": "^5.8.2",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@eslint/js": "^9.34.0",
    "@types/bcrypt": "^6.0.0",
    "@types/node": "^20.11.17",
    "@types/pg": "^8.15.5",
    "@vitest/coverage-v8": "^3.2.4",
    "dotenv-cli": "^10.0.0",
    "eslint": "^9.34.0",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "jiti": "^2.5.1",
    "lint-staged": "^16.1.6",
    "prettier": "^3.6.2",
    "tsx": "^4.7.1",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.41.0",
    "vitest": "^3.2.4"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{js,json,md}": [
      "prettier --write"
    ]
  }
}
