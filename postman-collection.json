              "path": ["books"],
              "query": [
                {
                  "key": "tags",
                  "value": "javascript,nodejs"
                },
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "10"
                }
              ]
            }
          }
        },
        {
          "name": "Get Book by ID",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/books/1",
              "host": ["{{base_url}}"],
              "path": ["books", "1"]
            }
          }
        }
      ]
    },
