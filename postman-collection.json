    {
      "name": "My Books (User's Books)",
      "item": [
        {
          "name": "Get My Books",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/my-books?page=1&limit=10",
              "host": ["{{base_url}}"],
              "path": ["my-books"],
              "query": [
                {
                  "key": "page",
